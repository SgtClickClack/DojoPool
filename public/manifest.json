{
  "name": "DojoPool",
  "short_name": "DojoPool",
  "description": "The ultimate pool gaming platform that bridges physical and digital gameplay",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#121212",
  "theme_color": "#2196F3",
  "orientation": "any",
  "scope": "/",
  "categories": ["games", "sports", "entertainment"],
  "icons": [
    {
      "src": "favicon.ico",
      "sizes": "64x64",
      "type": "image/x-icon"
    },
    {
      "src": "logo192.png",
      "type": "image/png",
      "sizes": "192x192",
      "purpose": "any maskable"
    },
    {
      "src": "logo512.png",
      "type": "image/png",
      "sizes": "512x512",
      "purpose": "any maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "New Game",
      "short_name": "Play",
      "description": "Start a new pool game",
      "url": "/game/new",
      "icons": [{ "src": "/icons/play.png", "sizes": "192x192" }]
    },
    {
      "name": "Tournaments",
      "short_name": "Tournaments",
      "description": "View active tournaments",
      "url": "/tournaments",
      "icons": [{ "src": "/icons/tournament.png", "sizes": "192x192" }]
    },
    {
      "name": "Profile",
      "short_name": "Profile",
      "description": "View your profile",
      "url": "/profile",
      "icons": [{ "src": "/icons/profile.png", "sizes": "192x192" }]
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/home.png",
      "type": "image/png",
      "sizes": "1080x1920",
      "form_factor": "narrow"
    },
    {
      "src": "/screenshots/game.png",
      "type": "image/png",
      "sizes": "1920x1080",
      "form_factor": "wide"
    },
    {
      "src": "/screenshots/stats.png",
      "type": "image/png",
      "sizes": "1920x1080",
      "form_factor": "wide"
    }
  ],
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.dojopool.app",
      "id": "com.dojopool.app"
    },
    {
      "platform": "itunes",
      "url": "https://apps.apple.com/app/dojopool/id123456789"
    }
  ],
  "prefer_related_applications": false,
  "protocol_handlers": [
    {
      "protocol": "web+dojopool",
      "url": "/%s"
    }
  ],
  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "media",
          "accept": ["image/*", "video/*"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/open-game",
      "accept": {
        "application/x-dojopool-game": [".dpg"]
      }
    }
  ],
  "launch_handler": {
    "client_mode": ["focus-existing", "auto"]
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "handle_links": "preferred",
  "lang": "en",
  "dir": "ltr",
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",
  "permissions": ["geolocation", "notifications", "camera", "microphone"],
  "note_taking": {
    "new_note_url": "/notes/new",
    "launch_types": ["create-new-note"]
  }
}
