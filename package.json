{
  "name": "dojopool",
  "private": true,
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "test": "vitest",
    "test:unit": "vitest run --config vitest.unit.config.ts",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:performance": "vitest run --config vitest.performance.config.ts",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:all": "yarn test:unit && yarn test:integration && yarn test:performance",
    "test:ci": "yarn test:coverage && yarn test:e2e",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/ tests/ --ext .ts,.tsx",
    "lint:fix": "eslint src/ tests/ --ext .ts,.tsx --fix",
    "check-deps": "node scripts/check-dependencies.js",
    "env:check": "node scripts/validate-env.mjs",
    "env:check:strict": "node scripts/validate-env.mjs --strict",
    "build:backend": "cd services/api && yarn build",
    "build": "next build",
    "start": "next start",
    "dev": "next dev"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@vitest/ui": "^3.2.4",
    "cypress": "^13.0.0",
    "dotenv": "^16.4.5",
    "jsdom": "^27.0.0",
    "msw": "^2.11.3",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "wait-on": "^7.0.0"
  }
}
