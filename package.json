{
  "name": "dojopool",
  "private": true,
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "prebuild": "yarn workspace @dojopool/prisma generate",
    "//--- MAIN COMMANDS ---//": "",
    "dev": "yarn workspace dojopool-frontend dev",
    "build": "yarn workspaces foreach -A run build",
    "start": "yarn workspace dojopool-frontend start",
    "lint": "yarn workspaces foreach -A -v run lint",
    "lint:fix": "yarn workspaces foreach -A -v run lint:fix",
    "test": "yarn test:unit && yarn test:integration",
    "test:e2e": "start-server-and-test dev:test http://localhost:3000 cy:run",
    "type-check": "yarn workspaces foreach -A run type-check",
    "//--- TESTING HELPERS ---//": "",
    "dev:test": "yarn workspace @dojopool/prisma generate && cd apps/web && dotenv -e .env.test -- npx next dev",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test:unit": "vitest run --config vitest.unit.config.ts",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:coverage": "vitest run --coverage",
    "//--- DATABASE ---//": "",
    "db:studio": "yarn workspace @dojopool/prisma db:studio",
    "//--- UTILITIES ---//": "",
    "env:validate": "node scripts/validate-environment.js"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/material": "^7.3.2",
    "@mui/system": "^7.3.2",
    "@mui/x-date-pickers": "^8.11.3",
    "@tanstack/react-query": "^5.89.0",
    "passport-jwt": "^4.0.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "recharts": "^3.2.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@cypress/code-coverage": "^3.12.0",
    "@faker-js/faker": "^8.4.1",
    "@percy/cli": "^1.29.3",
    "@percy/cypress": "^3.1.6",
    "@testing-library/cypress": "^10.1.0",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/morgan": "^1.9.10",
    "@types/passport-jwt": "^4.0.1",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^5.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "babel-loader": "^9.1.3",
    "bundlemon": "^3.1.0",
    "cypress": "^13.17.0",
    "cypress-fail-fast": "^7.1.1",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "jsdom": "^27.0.0",
    "msw": "^2.11.3",
    "prettier": "^3.6.2",
    "start-server-and-test": "^2.1.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "wait-on": "^7.0.0",
    "webpack": "^5.89.0",
    "whatwg-fetch": "^3.6.20"
  },
  "prisma": {
    "schema": "packages/prisma/schema.prisma"
  }
}
