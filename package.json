{
  "name": "dojopool",
  "private": true,
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "test": "vitest",
    "test:unit": "vitest run --config vitest.unit.config.ts",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:performance": "vitest run --config vitest.performance.config.ts",
    "test:components": "vitest run --config vitest.components.config.ts",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:run:headed": "cypress run --headed",
    "cypress:run:chrome": "cypress run --browser chrome",
    "cypress:run:firefox": "cypress run --browser firefox",
    "cypress:run:edge": "cypress run --browser edge",
    "cypress:run:record": "cypress run --record --key $CYPRESS_RECORD_KEY",
    "cypress:run:parallel": "cypress run --record --parallel --key $CYPRESS_RECORD_KEY",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:e2e:ci": "cypress run --record --parallel --key $CYPRESS_RECORD_KEY",
    "test:all": "yarn test:unit && yarn test:integration && yarn test:performance",
    "test:ci": "yarn test:coverage && yarn test:e2e",
    "type-check": "tsc --noEmit",
    "lint": "yarn workspaces foreach -A -v run lint",
    "lint:fix": "yarn workspaces foreach -A -v run lint:fix",
    "check-deps": "node scripts/check-dependencies.js",
    "env:check": "node scripts/validate-env.mjs",
    "env:check:strict": "node scripts/validate-env.mjs --strict",
    "env:validate": "node scripts/validate-environment.js",
    "build:backend": "cd services/api && yarn build",
    "build": "next build",
    "start": "next start",
    "dev": "next dev"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/material": "^7.3.2",
    "@mui/system": "^7.3.2",
    "@mui/x-date-pickers": "^8.11.3",
    "@tanstack/react-query": "^5.89.0",
    "@types/morgan": "^1.9.10",
    "@types/uuid": "^11.0.0",
    "@vis.gl/react-maplibre": "^8.0.4",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "recharts": "^3.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@cypress/code-coverage": "^3.12.0",
    "@faker-js/faker": "^8.4.1",
    "@percy/cli": "^1.29.3",
    "@percy/cypress": "^3.1.6",
    "@testing-library/cypress": "^10.1.0",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/ungap__structured-clone": "^1.2.0",
    "@ungap/structured-clone": "^1.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "babel-loader": "^9.1.3",
    "cypress": "^13.0.0",
    "cypress-mochawesome-reporter": "^3.6.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^10.1.8",
    "jsdom": "^27.0.0",
    "msw": "^2.11.3",
    "prettier": "^3.6.2",
    "react-is": "^18.2.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "wait-on": "^7.0.0",
    "webpack": "^5.89.0",
    "whatwg-fetch": "^3.6.20"
  }
}
