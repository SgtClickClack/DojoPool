{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "isolatedModules": false,
    "module": "CommonJS",
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./types"],
    "paths": {}
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "scripts/**/*",
    "src/notifications/test-notifications.script.ts",
    "src/shadow-runs/**/*",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
