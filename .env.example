# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true

# Email Notifications
ENABLE_EMAIL_NOTIFICATIONS=true
EMAIL_NOTIFICATION_RECIPIENTS=admin@example.com,team@example.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# Slack Notifications
ENABLE_SLACK_NOTIFICATIONS=true
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your-webhook-url
SLACK_CHANNEL=#performance-alerts

# AWS SNS Notifications
ENABLE_SNS_NOTIFICATIONS=true
SNS_TOPIC_ARN=arn:aws:sns:region:account-id:topic-name
AWS_REGION=us-east-1

# Alert Thresholds
REGRESSION_ERROR_THRESHOLD=20
REGRESSION_WARNING_THRESHOLD=10
CONSECUTIVE_FAILURES_THRESHOLD=3
MIN_TIME_BETWEEN_ALERTS=3600000

# Alert Batching
ENABLE_ALERT_BATCHING=true
ALERT_BATCHING_INTERVAL=300000
MAX_BATCH_SIZE=10

# Performance Budgets
INITIAL_RENDER_THRESHOLD=100
LARGE_DATASET_RENDER_THRESHOLD=200
UPDATE_PERFORMANCE_THRESHOLD=50
CHART_RENDERING_THRESHOLD=150
LIST_VIRTUALIZATION_THRESHOLD=200
SCROLL_PERFORMANCE_THRESHOLD=16 