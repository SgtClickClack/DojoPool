# Flask Configuration
FLASK_APP=src.core.app:create_app
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=your-secret-key-here

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/dojopool_dev
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/dojopool_test

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Game Configuration
MAX_PLAYERS_PER_GAME=2
MATCHMAKING_TIMEOUT=60
TURN_TIMEOUT=30

# AI/ML Configuration
VISION_API_KEY=your-vision-api-key
MODEL_WEIGHTS_PATH=src/models/ai/weights

# Authentication
JWT_SECRET_KEY=your-jwt-secret-key
TOKEN_EXPIRE_HOURS=24
PASSWORD_SALT=your-password-salt

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password

# Monitoring
LOG_LEVEL=DEBUG
SENTRY_DSN=your-sentry-dsn
ENABLE_PERFORMANCE_MONITORING=true

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_MULTIPLAYER=true
ENABLE_TOURNAMENTS=true
ENABLE_SOCIAL_FEATURES=true

# Development Tools
ENABLE_DEBUG_TOOLBAR=true
PROFILE_QUERIES=true 