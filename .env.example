# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true

# Email Notifications
ENABLE_EMAIL_NOTIFICATIONS=true
EMAIL_NOTIFICATION_RECIPIENTS=admin@example.com,team@example.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# Slack Notifications
ENABLE_SLACK_NOTIFICATIONS=true
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your-webhook-url
SLACK_CHANNEL=#performance-alerts

# AWS SNS Notifications
ENABLE_SNS_NOTIFICATIONS=true
SNS_TOPIC_ARN=arn:aws:sns:region:account-id:topic-name
AWS_REGION=us-east-1

# Alert Thresholds
REGRESSION_ERROR_THRESHOLD=20
REGRESSION_WARNING_THRESHOLD=10
CONSECUTIVE_FAILURES_THRESHOLD=3
MIN_TIME_BETWEEN_ALERTS=3600000

# Alert Batching
ENABLE_ALERT_BATCHING=true
ALERT_BATCHING_INTERVAL=300000
MAX_BATCH_SIZE=10

# Performance Budgets
INITIAL_RENDER_THRESHOLD=100
LARGE_DATASET_RENDER_THRESHOLD=200
UPDATE_PERFORMANCE_THRESHOLD=50
CHART_RENDERING_THRESHOLD=150
LIST_VIRTUALIZATION_THRESHOLD=200
SCROLL_PERFORMANCE_THRESHOLD=16

# 3D AI Studio API Configuration
# Get your API key from https://www.3daistudio.com/
REACT_APP_3DAI_STUDIO_API_KEY=your_3d_ai_studio_api_key

# Other environment variables...
REACT_APP_API_URL=http://localhost:3001
REACT_APP_FIREBASE_API_KEY=your_firebase_api_key
REACT_APP_FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain
REACT_APP_FIREBASE_PROJECT_ID=your_firebase_project_id 