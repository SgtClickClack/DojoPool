# DojoPool Environment Configuration
# Copy this file to .env.local and fill in your actual values

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/dojopool?schema=public"

# Frontend API URL
NEXT_PUBLIC_API_URL=http://localhost:3002/api/v1

# Development Settings
NODE_ENV=development
FLASK_ENV=development
FLASK_DEBUG=1

# Mapbox API Token (required for map functionality)
# Get your token from: https://www.mapbox.com/account/
NEXT_PUBLIC_MAPBOX_TOKEN=your_mapbox_token_here

# Google Maps API Key (required for map functionality)
# Get your key from: https://console.cloud.google.com/
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# WebSocket Configuration
NEXT_PUBLIC_WEBSOCKET_URL=http://localhost:3002

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_WEBSOCKETS=true
NEXT_PUBLIC_ENABLE_CACHING=true
NEXT_PUBLIC_ENABLE_ML_FEATURES=true
NEXT_PUBLIC_ENABLE_AI_FEATURES=true

# Cloudinary configuration (used by services/api)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
CLOUDINARY_FOLDER=dojopool/avatars

# API server settings
PORT=3002
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000
SESSION_SECRET=your_secure_session_secret_here
JWT_SECRET=your_secure_jwt_secret_here
REDIS_URL=redis://localhost:6379
FLASK_BASE_URL=http://localhost:5000

# Google OAuth Configuration
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_OAUTH_CLIENT_ID=your_google_oauth_client_id_here
GOOGLE_OAUTH_CLIENT_SECRET=your_google_oauth_client_secret_here
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:3002/api/v1/auth/google/callback

# AI Service Configuration
# Gemini AI (Google AI Studio)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Computer Vision Configuration
OPENCV_ENABLED=true
OPENCV_WASM_PATH=

# TensorFlow Configuration
TENSORFLOW_ENABLED=false
TENSORFLOW_MODEL_PATH=

# Production Redis Configuration (required for production)
# REDIS_HOST=your_redis_host
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password
