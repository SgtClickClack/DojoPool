{
  "name": "dojopool-performance-tests",
  "version": "1.0.0",
  "description": "Comprehensive performance testing suite for DojoPool platform",
  "scripts": {
    "test:load": "artillery run load-tests/dashboard-load.yml",
    "test:stress": "artillery run stress-tests/api-stress.yml",
    "test:spike": "artillery run stress-tests/spike-test.yml",
    "test:websocket": "artillery run load-tests/websocket-load.yml",
    "test:all": "npm run test:load && npm run test:stress && npm run test:spike",
    "benchmark:api": "node benchmark/api-benchmark.js",
    "benchmark:db": "node benchmark/database-benchmark.js",
    "monitor:performance": "node utils/performance-monitor.js",
    "report:generate": "node utils/generate-report.js",
    "ci:performance": "npm run test:load && npm run benchmark:api && npm run report:generate"
  },
  "dependencies": {
    "artillery": "^2.0.8",
    "artillery-plugin-expect": "^2.3.0",
    "artillery-plugin-metrics-by-endpoint": "^1.2.0",
    "autocannon": "^7.15.0",
    "clinic": "^13.0.0",
    "easy-table": "^1.2.0",
    "fs-extra": "^11.2.0",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "node-fetch": "^3.3.2",
    "pg": "^8.11.3",
    "redis": "^4.6.13",
    "socket.io-client": "^4.7.5",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/redis": "^4.0.11",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
