{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": false,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/backend/**/*",
    "src/config/monitoring.ts",
    "src/config/environment.backend.ts",
    "src/services/blockchain/**/*",
    "src/services/analytics/**/*",
    "src/services/venue/**/*",
    "src/services/tournament/**/*",
    "src/services/social/**/*",
    "src/services/economy/**/*",
    "src/services/narrative/**/*",
    "src/services/challengeStorage.ts",
    "src/utils/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "node_modules", 
    "dist", 
    "build", 
    "src/frontend/**/*",
    "src/components/**/*",
    "src/pages/**/*",
    "src/config/environment.ts",
    "src/services/ai/**/*",
    "src/services/referee/**/*",
    "src/services/avatar3DService-Meex.ts",
    "src/firebase/**/*",
    "src/services/network/**/*",
    "src/services/wallet/**/*"
  ]
} 