{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": false,
    "outDir": "./dist",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["services/api/src/**/*", "services/api/types/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "apps/**/*",
    "packages/**/*",
    "components/**/*",
    "pages/**/*",
    "hooks/**/*",
    "firebase/**/*",
    "utils/**/*",
    "cypress/**/*",
    "tests/**/*",
    "infrastructure/**/*",
    "monitoring/**/*",
    "load-tests/**/*",
    "security/**/*",
    "scripts/**/*",
    "public/**/*",
    "static/**/*",
    "styles/**/*",
    "types/**/*",
    "services/api/src/**/*.spec.ts",
    "services/api/src/**/*.test.ts",
    "services/api/src/__tests__/**/*",
    "services/api/src/backend/routes/advanced-*.ts",
    "services/api/src/backend/routes/enhanced-*.ts",
    "services/api/src/backend/routes/venue-*.ts"
  ]
}
