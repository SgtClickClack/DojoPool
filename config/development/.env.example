# Development Environment Configuration

# Application
APP_NAME=DojoPool
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=DEBUG

# Server
HOST=0.0.0.0
PORT=8080
WORKERS=2

# Security
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-here
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
SESSION_COOKIE_SECURE=False
CSRF_ENABLED=True

# Database
DATABASE_URL=sqlite:///dojopool.db
DATABASE_POOL_SIZE=5
DATABASE_POOL_TIMEOUT=30

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SSL=False

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379/0
RATELIMIT_DEFAULT=100/hour
RATELIMIT_STRATEGY=fixed-window

# Game Configuration
MAX_PLAYERS_PER_GAME=2
GAME_SESSION_TIMEOUT=3600
MATCHMAKING_TIMEOUT=300

# AI Configuration
AI_MODEL_PATH=models/game_ai_v1
AI_CONFIDENCE_THRESHOLD=0.85
AI_BATCH_SIZE=32

# Monitoring
ENABLE_PROMETHEUS=True
PROMETHEUS_PORT=9090
ENABLE_LOGGING=True
LOG_FILE_PATH=logs/dojopool.log

# Feature Flags
ENABLE_MATCHMAKING=True
ENABLE_AI_ASSISTANCE=True
ENABLE_TOURNAMENTS=False
ENABLE_CHAT=True

# External Services
STRIPE_PUBLIC_KEY=your-stripe-public-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Blockchain (Optional)
BLOCKCHAIN_ENABLED=False
BLOCKCHAIN_NETWORK=testnet
SMART_CONTRACT_ADDRESS=your-contract-address
WEB3_PROVIDER_URI=https://your-web3-provider

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@dojopool.com

# Storage
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif

# Documentation
SWAGGER_UI_ENABLED=True
REDOC_ENABLED=True
API_TITLE="DojoPool API"
API_VERSION="1.0.0" 