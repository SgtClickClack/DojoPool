# Database Configuration
DATABASE_URL=postgresql://dojopool:${POSTGRES_PASSWORD}@postgres:5432/dojopool
POSTGRES_PASSWORD=your_secure_password
POSTGRES_USER=dojopool
POSTGRES_DB=dojopool

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=your_secure_password

# Authentication
NEXTAUTH_URL=https://dojopool.com.au
NEXTAUTH_SECRET=your_nextauth_secret
JWT_SECRET=your_jwt_secret

# API Keys
OPENAI_API_KEY=your_openai_key
GOOGLE_MAPS_API_KEY=your_google_maps_key
STRIPE_SECRET_KEY=your_stripe_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Feature Flags
ENABLE_AI_ANALYSIS=true
ENABLE_REAL_TIME_TRACKING=true
ENABLE_TOURNAMENT_REGISTRATION=true
ENABLE_PAYMENT_PROCESSING=true

# Monitoring
SENTRY_DSN=your_sentry_dsn
NEW_RELIC_LICENSE_KEY=your_new_relic_key
DATADOG_API_KEY=your_datadog_key

# Performance
NODE_ENV=production
NEXT_PUBLIC_API_URL=https://api.dojopool.com.au
NEXT_PUBLIC_WS_URL=wss://ws.dojopool.com.au

# Security
CORS_ORIGIN=https://dojopool.com.au
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/dojopool 