{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "isolatedModules": true,
    "strict": true,
    "jsx": "react",
    "module": "commonjs",
    "target": "es2019",
    "lib": ["es2019", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/__tests__/**/*"
  ]
} 