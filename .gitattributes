*.py text eol=lf
*.sh text eol=lf
*.bat text eol=lf
*.ps1 text eol=lf
*.env text eol=lf
*.env.* text eol=lf
*.txt text eol=lf
*.log text eol=lf
*.ini text eol=lf
*.conf text eol=lf
*.config text eol=lf

# Declare files that will always have CRLF line endings on checkout
*.bat text eol=crlf
*.cmd text eol=crlf

# Declare files that will always have LF line endings on checkout
*.sh text eol=lf

