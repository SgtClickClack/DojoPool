# DojoPool Environment Example
# Copy to .env (backend) and/or .env.local (Next.js) and adjust values.
# Do NOT commit real secrets.

# Runtime
NODE_ENV=development
PORT=8080
HOST=0.0.0.0

# Frontend (Next.js / Vite)
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080
NEXT_PUBLIC_WS_URL=ws://localhost:8080
NEXT_PUBLIC_FLASK_BASE_URL=http://localhost:5000
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Backend (Node/Express)
API_BASE_URL=http://localhost:8080
FLASK_BASE_URL=http://localhost:5000
CORS_ORIGINS=http://localhost:3000
SESSION_SECRET=replace_me_session_secret
JWT_SECRET=replace_me_jwt_secret
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# Database / Cache
# Choose the canonical DB for your deployment; both listed to support mixed repos.
MONGODB_URI=mongodb://localhost:27017/dojopool
POSTGRES_URL=postgresql://user:password@localhost:5432/dojopool
REDIS_URL=redis://localhost:6379

# OpenAI / AI Services
OPENAI_API_KEY=
AI_TIMEOUT_MS=15000

# Email / Notifications (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# NextAuth/Auth.js (if used)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=replace_me_nextauth_secret

# Security / CSP
CSP_CONNECT_SRC=http://localhost:8080 http://localhost:5000 ws://localhost:8080
