FLASK_APP=dojopool
FLASK_ENV=production
DEBUG=0
SECRET_KEY=your_secure_secret_key_here
ALLOWED_HOSTS=localhost,127.0.0.1

# PostgreSQL Configuration
POSTGRES_DB=dojopooldb
POSTGRES_USER=dojopool
POSTGRES_PASSWORD=dojopool_secure_password_123
DB_HOST=postgres
DB_PORT=5432
DB_NAME=${POSTGRES_DB}
DB_USER=${POSTGRES_USER}
DB_PASSWORD=${POSTGRES_PASSWORD}
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${DB_HOST}:${DB_PORT}/${POSTGRES_DB}

# Redis Configuration
REDIS_URL=redis://redis:6379/0
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=3600

# Security Settings
SESSION_COOKIE_SECURE=0
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Strict
WTF_CSRF_ENABLED=true
WTF_CSRF_SSL_STRICT=true
SSL_REDIRECT=0
SECURE_SSL_REDIRECT=0
CSRF_COOKIE_SECURE=0
CSRF_TRUSTED_ORIGINS=http://localhost,http://127.0.0.1

# Email Configuration
MAIL_SERVER=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=apikey
MAIL_DEFAULT_SENDER=noreply@dojopool.com.au

# Monitoring and Logging
LOG_LEVEL=INFO
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_WEBSOCKETS=true
ENABLE_CACHING=true
ENABLE_ANALYTICS=true

# Rate Limiting
RATELIMIT_ENABLED=true
RATELIMIT_DEFAULT=100/minute
RATELIMIT_STORAGE_URL=redis://redis:6379/1

# Application Settings
DJANGO_SETTINGS_MODULE=dojopool.settings.production

# Security Settings
SESSION_COOKIE_SECURE=0
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Strict
WTF_CSRF_ENABLED=true
WTF_CSRF_SSL_STRICT=true
SSL_REDIRECT=0
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=true
SECURE_CONTENT_TYPE_NOSNIFF=true
X_FRAME_OPTIONS=DENY
GOOGLE_MAPS_API_KEY=__REPLACE_WITH_GOOGLE_MAPS_API_KEY__
SENDGRID_API_KEY=__REPLACE_WITH_SENDGRID_API_KEY__
GOOGLE_CLIENT_ID=__REPLACE_WITH_GOOGLE_CLIENT_ID__
GOOGLE_CLIENT_SECRET=__REPLACE_WITH_GOOGLE_CLIENT_SECRET__
OAUTH2_PROVIDERS=google
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp
MAIL_PASSWORD=__REPLACE_WITH_SENDGRID_API_KEY__
LOG_LEVEL=INFO
SENTRY_DSN=__REPLACE_WITH_SENTRY_DSN__
RATELIMIT_ENABLED=true
RATELIMIT_DEFAULT=100/minute
RATELIMIT_STORAGE_URL=redis://redis:6379/1
SECURITY_HEADERS_ENABLED=true
CSP_REPORT_ONLY=false
CSP_REPORT_URI=https://dojopool.report-uri.com/r/d/csp/enforce
FLASK_DEBUG=0
PERMANENT_SESSION_LIFETIME=3600
CSRF_ENABLED=True
WTF_CSRF_TIME_LIMIT=3600
REMEMBER_COOKIE_SECURE=0
REMEMBER_COOKIE_HTTPONLY=True
REMEMBER_COOKIE_DURATION=3600
DATABASE_CONNECTION_TIMEOUT=5
DATABASE_POOL_RECYCLE=3600
PREFERRED_URL_SCHEME=https
CORS_SUPPORTS_CREDENTIALS=True
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=604800
RATE_LIMIT_ENABLED=True
RATE_LIMIT_STORAGE_URL=memory://
RATE_LIMIT_STRATEGY=fixed-window
RATE_LIMIT_DEFAULT=100/hour
PROPAGATE_EXCEPTIONS=False
TRAP_HTTP_EXCEPTIONS=True
JSONIFY_PRETTYPRINT_REGULAR=False
TEMPLATES_AUTO_RELOAD=False
EXPLAIN_TEMPLATE_LOADING=False
